<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_background"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_listChat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ansab Parvez"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_heading"
        app:layout_constraintEnd_toStartOf="@id/tv_listChat_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_listChat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15/10/2021"
        android:textSize="16sp"
        android:textColor="@color/text_sub_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_listChat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/text_sub_heading"
        android:text="This is a sample message and it will be shown in the screen and see if it gets trimmed."
        app:layout_constraintTop_toBottomOf="@id/tv_listChat_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_background_light"
        app:layout_constraintTop_toBottomOf="@id/tv_listChat_message" />

</androidx.constraintlayout.widget.ConstraintLayout>