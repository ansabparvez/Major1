<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.HomeActivity">

    <FrameLayout
        android:id="@+id/frameLayout_home_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav_home_nav"/>

   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:id="@+id/bottomNav_home_nav"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:menu="@menu/menu_home_bottom_nav"
       app:itemIconTint="@null"
       app:itemIconSize="32dp"
       app:labelVisibilityMode="unlabeled"
       android:background="@color/color_bottom_nav_background"
       app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>