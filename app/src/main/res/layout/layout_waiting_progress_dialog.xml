<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingVertical="30dp"
        android:paddingHorizontal="25dp"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_lwpd_progress"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:progressBackgroundTint="@color/color_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lwpd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="wait"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/progress_lwpd_progress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lwpd_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="wait"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/color_text_dark"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/progress_lwpd_progress"
            app:layout_constraintTop_toBottomOf="@id/tv_lwpd_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>